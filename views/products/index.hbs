<h1>Products</h1>

{{#if products.length}}
	<div class="row">
		{{#each products}}
			<div class="col-md-4 mb-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{this.name}}</h5>
						<p class="card-text">${{this.price}}</p>
						<a href="/products/{{this.id}}" class="btn btn-primary">View Details</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{else}}
	<p>No products found.</p>
{{/if}}